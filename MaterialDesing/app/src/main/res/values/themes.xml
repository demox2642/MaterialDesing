<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesing" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="materialCardViewStyle">@style/CardView</item>
    </style>
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="labelVisibilityMode" >selected</item>
    </style>
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="textAppearanceHeadline6">@style/Headline6</item>

    </style>
    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:maxLength">10</item>
    </style>
</resources>